{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".svelte-kit/**", "dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"]
		}
	},
	"generators": {
		"update-deps": {
			"description": "Update dependencies across all packages",
			"exec": "ncu --upgrade --target latest --dep prod && ncu --upgrade --target latest --dep dev",
			"inputs": ["package.json"]
		}
	}
}
